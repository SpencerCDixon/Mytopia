<div class="dream-home">.
  <div class="row search-neighborhood">
    <div class="row">
      <div class="large-12 columns home-tagline">
        <h1>Find Your Utopia</h1>
        <h2>Enter neighborhood name, city, or state</h2>
      </div>
    </div>

    <div class="large-10 columns large-offset-1">

    <%= form_tag neighborhoods_path, method: :get do %>
      <div class="row collapse">
        <div class="small-10 columns">
          <%= text_field_tag :search, params[:search] %>
        </div>
        <div class="small-2 columns">
          <button id="search-button" class='button postfix'>
            <%= fa_icon("search") %>
          </button>
        </div>
      </div>

    <% end %>

    <% if @neighborhoods %>
      <% @neighborhoods.each do |n| %>
      <p><%= link_to n.name, neighborhood_path(n) %></p>
      <% end %>
    <% end %>

    </div>
  </div>
</div>

