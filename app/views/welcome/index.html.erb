<div class="dream-home">.
  <div class="row search-neighborhood">
    <div class="row">
      <div class="large-12 columns home-tagline">
        <h1>Find Your Utopia</h1>
        <h2>Enter neighborhood name, city, or state</h2>
      </div>
    </div>

    <%= form_tag root_path, method: :get do %>
      <div class="row collapse">
        <div class="small-10 columns">
          <%= text_field_tag :search, params[:search] %>
        </div>
        <div class="small-2 columns">
          <%= submit_tag "Search", :name => nil, class: "button postfix" %>
        </div>
      </div>

    <% end %>

    <% if @neighborhoods %>
      <% @neighborhoods.each do |n| %>
      <p><%= link_to n.name, neighborhood_path(n) %></p>
      <% end %>
    <% end %>
  </div>
</div>

