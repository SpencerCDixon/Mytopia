<h1> <%= @review.title %> </h1>
<p> <%= @review.body %> </p>

<% if current_user %>
  <%= form_for [@review.neighborhood, @review, @comment] do |f| %>
  <p>
    <%= f.label :body %>
    <%= f.text_field :body %>
  </p>

  <%= f.submit %>
  <% end %>
<% else %>
  <%= link_to "Sign in to comment", new_user_session_path, class: "btn warning" %>
<% end %>

<ul>
  <% @review.comments.each do |comment| %>
    <li><%= comment.body %></li>
  <% end %>
</ul>
