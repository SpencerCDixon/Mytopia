<div class="row">
  <div class="large-4 columns">
    <a class="th" href="#">
      <img src="/assets/house-test-image.png">
    </a>
  </div>
  <div class="large-8 columns review-title"><h1> <%= @review.title %> </h1></div>
</div>

<div class="row">
  <div class="large-4 columns"></div>
  <div class="large-8 columns review-body"> <%= @review.body %> </div>
</div>
<hr>

<!-- <ul class="small-block-grid-3">
  <li>...</li>
</ul> -->

<!-- <p> <%= @review.body %> </p> -->

<% if current_user %>
  <%= form_for [@review.neighborhood, @review, @comment] do |f| %>
    <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@comment.errors.count, "error") %> prohibited
            this review from being saved:</h2>
          <ul>
            <% @comment.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

  <h4>Comments</h4>
  <hr>
  <ul>
    <ul class="inline-list">
    <% @review.comments.each do |comment| %>
      <li><%= link_to comment.user.username, user_path(comment.user) %></li>
      <li><%= "#{comment.user.updated_at}" %></li>
    </ul>
    <ul class="vcard">
      <li><div class="comment-body"><%= comment.body %></div></li>
    </ul>
    <ul class="inline-list">
    <% if comment.owner?(current_user) %>
      <li><%= link_to 'Edit', edit_neighborhood_review_comment_path(comment.review.neighborhood, comment.review, comment) %></li>

      <li><%= link_to 'Delete', neighborhood_review_comment_path(comment.review.neighborhood, comment.review, comment), method: :delete, data: {confirm: 'Are you sure you want to delete comment?'} %></li>
      <% end %>
    </ul>
     </li>
    <% end %>
  </ul>
  <p>
    <%= f.text_field :body, :placeholder => "Leave a Comment!" %>
  </p>
  <%= f.submit "Create Comment", class: "button" %>
  <% end %>
<% else %>
  <%= link_to "Sign in to comment", new_user_session_path, class: "btn warning" %>
<% end %>
