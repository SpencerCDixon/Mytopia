<h1><%= @review.title %></h1>
<p><%= @review.body %></p>



<ul>
<% @review.comments.each do |comment| %>
  <li><%= comment.body %> <%=link_to "Edit", edit_admin_neighborhood_review_comment_path(comment.review.neighborhood, comment.review, comment) %> <%=link_to "Delete", admin_neighborhood_review_comment_path(comment.review.neighborhood, comment.review, comment), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %></li>
<% end %>
</ul>
